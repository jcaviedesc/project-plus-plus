ProjectPlusPlusGrammar {
    ProjectStatement = "PROYECTO" openBracket KeyAndValue* closeBracket
    
    openBracket = "["
    
    closeBracket = "]"
    
    KeyAndValue = Key colon Value semicolon

    Key = #(letter+)

    Value = #(digit+) | (letter+) | alnum+

    colon = ":"
    
    semicolon = ";"

    comment
      = "/*" (~"*/" any)* "*/"  -- multiLine
      | "#" (~"\n" any)*       -- singleLine
}